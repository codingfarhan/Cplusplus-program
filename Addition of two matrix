#include<iostream.h>
#include<conio.h>
int main()
{
int a[3][3], b[3][3], c[3][3], j, i;
cout<<"enter elements for matrix 'a'"<<endl;
for(i=0; i<3; i++)
{
for(j=0; j<3; j++)
{
cin>>a[i][j];
}
}
cout<<"enter elements for marix 'b'"<<endl;
for(i=0; i<3; i++)
{
for(j=0; j<3; j++)
{
cin>>b[i][j];
}
}
for(i=0; i<3; i++)
{
for(j=0; j<3; j++)
{
c[i][j]=a[i][j]+b[i][j];
}
}
cout<<"matrix after addition: "<<endl;
for(i=0; i<3; i++)
{ cout<<"\n";
for(j=0; j<3; j++)
{      cout<<"\t";
cout<<c[i][j];
}
}
getch();
}
