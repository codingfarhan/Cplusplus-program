
This is a simple program to find number of vowels contained in the entered string.


 #include<iostream.h>
#include<conio.h>
#include<stdio.h>
#include<string.h>

int main()
{
int i, count=0;
char str[99];
cout<<"input a string"<<endl;
gets(str);
int m=strlen(str);

for(i=0; i<m; i++)
{
 switch(str[i])
 {
  case'a': count++;
	   break;
  case'e': count++;
	   break;
  case'i': count++;
	   break;
  case'o': count++;
	   break;
  case'u': count++;
	   break;
  default: break;
  }
}
if (count>0)
cout<<"there are "<<count<<" vowels in the entered string"<<endl;
else
cout<<"there are no vowels in the string"<<endl;
getch();
}
